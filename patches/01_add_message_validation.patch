+/**
+ * Test that useWebSocket validates messages with zod
+ */
+import { describe, it, expect, vi } from 'vitest';
+import { renderHook } from '@testing-library/react';
+import { useWebSocket } from '../useWebSocket';
+
+describe('useWebSocket message validation', () => {
+  it('should reject invalid message and continue processing', () => {
+    const onMessage = vi.fn();
+    const onError = vi.fn();
+
+    const { result } = renderHook(() =>
+      useWebSocket({
+        url: 'ws://localhost:9000',
+        onMessage,
+        onError,
+      })
+    );
+
+    // Simulate invalid message (missing required fields)
+    const invalidMessage = JSON.stringify({
+      type: 'layer_data_update',
+      // Missing payload and meta
+    });
+
+    // Get WebSocket instance from hook
+    const ws = result.current.socket;
+
+    // Simulate message event
+    const messageEvent = new MessageEvent('message', {
+      data: invalidMessage,
+    });
+
+    ws?.dispatchEvent(messageEvent);
+
+    // onMessage should NOT be called with invalid message
+    expect(onMessage).not.toHaveBeenCalled();
+
+    // Error should be logged (check console.error was called)
+    expect(console.error).toHaveBeenCalledWith(
+      expect.stringContaining('Invalid WebSocket message'),
+      expect.any(Error)
+    );
+  });
+});
