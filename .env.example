# Forecastin Environment Configuration
# Copy this file to .env and update the values for your environment

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Option 1: Provide full DATABASE_URL
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Option 2: Provide individual components (will be combined into DATABASE_URL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=forecastin
DATABASE_USER=forecastin
DATABASE_PASSWORD=your_secure_password_here

# ============================================================================
# REDIS CACHE CONFIGURATION
# ============================================================================
# Option 1: Provide full REDIS_URL
# REDIS_URL=redis://hostname:6379/0

# Option 2: Provide individual components
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_PORT=9000
ENVIRONMENT=development  # Options: development, staging, production
LOG_LEVEL=INFO           # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# FRONTEND CONFIGURATION (for deployment scripts)
# ============================================================================
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:9000

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. NEVER commit the .env file to version control
# 2. Use strong passwords in production
# 3. Set DATABASE_PASSWORD in production (empty password is only for development)
# 4. For Docker deployments, these values can be overridden in docker-compose.yml

# ============================================================================
# OPTIONAL CONFIGURATIONS
# ============================================================================
# These are set to sensible defaults if not provided

# Feature Flags
# FEATURE_FLAG_CACHE_TTL=300

# Performance Tuning
# DATABASE_POOL_MIN_SIZE=5
# DATABASE_POOL_MAX_SIZE=20
# REDIS_MAX_CONNECTIONS=50

# Monitoring
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3001
